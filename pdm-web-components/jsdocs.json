{
    "plugins": [
        "plugins/markdown",
        "plugins/summarize"
    ],
    "package": "package.json",
    "recurseDepth": 10,
    "source": {
        "include": [
            "./src"
        ],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "templates": {
        "better-docs": {
            "name": "PDM&FC's Web Ionic Components Documentation",
            "title": "PDM&FC's Web Ionic Components Documentation",
            "hideGenerator": true,
            "navLinks": [
                {
                    "label": "Github",
                    "href": "https://github.com/PharmaLedger-IMI/epi-workspace/pdm-trust-loader.git"
                },
                {
                    "label": "Example Application - Finished Goods Traceability",
                    "href": "https://fgt.pharmaledger.pdmfc.com"
                }
            ]
        },
        "cleverLinks": false,
        "monospaceLinks": false,
        "search": true
    },
    "opts": {
        "encoding": "utf-8",
        "template": "./node_modules/better-docs",
        "destination": "./docs/",
        "readme": "./README.md",
        "recurse": true,
        "verbose": true
    }
}
