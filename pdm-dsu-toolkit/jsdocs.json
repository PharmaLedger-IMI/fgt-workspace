{
    "plugins": [
        "plugins/markdown",
        "plugins/summarize"
    ],
    "package": "package.json",
    "recurseDepth": 10,
    "source": {
        "include": [
            "."
        ],
        "exclude": [
            "node_modules",
            "build/bundles"
        ],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "templates": {
        "systemName"            : "Pharmaledger's Finished Goods Traceability",
        "footer"                : "PDM&FC",
        "copyright"             :  "MIT Licence",
        "includeDate"           : "true",
        "navType"               : "inline",
        "theme"                 : "yeti",
        "linenums"              : "true",
        "collapseSymbols"       : "false",
        "inverseNav"            : "true",
        "outputSourceFiles"     : "true" ,
        "outputSourcePath"      : "false",
        "dateFormat"            : "dddd, MMMM Do YYYY, h:mm:ss a",
        "syntaxTheme"           : "default",
        "sort"                  : "true",
        "search"                : "true"
    },
    "opts": {
        "template": "node_modules/ink-docstrap/template",
        "destination": "./docs/output/",
        "readme": "./README.md",
        "recurse": true,
        "verbose": true,
        "docdash": {
            "static": true,
            "sort": true,
            "sectionOrder": [
                "Classes",
                "Modules",
                "Externals",
                "Events",
                "Namespaces",
                "Mixins",
                "Tutorials",
                "Interfaces"
            ],
            "search": true,
            "collapse": true,
            "wrap": false,
            "typedefs": true,
            "navLevel": -1,
            "private": true,
            "removeQuotes": "none",
            "scripts": [],
            "menu": {
                "Project Website": {
                    "href":"https://fgt.pharmaledger.pdmfc.com",
                    "target":"_blank",
                    "class":"menu-item",
                    "id":"website_link"
                }
            },
            "nameInOutputPath": true,
            "versionInOutputPath": true
        }
    }
}