{
  "workDir": ".",
  "dependencies": [
    {
      "name": "Documentation Theme Install (globally)",
      "src": "",
      "actions": [
        {
          "type": "execute",
          "cmd": "sh -c \"theme=`npm ls -g better-docs | grep better-docs` && [ -z \\\"$theme\\\" ] && npm install -g better-docs taffydb || echo \\\"Documentation Theme already Installed\\\"\""
        }
      ]
    },
    {
      "name": "PSK bundles",
      "src": "",
      "actions": [
        {
          "type": "copy",
          "src": "../privatesky/psknode/bundles/swBoot.js",
          "target": "./swBoot.js",
          "options": {
            "overwrite": true
          }
        },
        {
          "type": "copy",
          "src": "../privatesky/psknode/bundles/webshims.js",
          "target": "./bundles/webshims.js",
          "options": {
            "overwrite": true
          }
        },
        {
          "type": "copy",
          "src": "../privatesky/psknode/bundles/loaderBoot.js",
          "target": "./bundles/loaderBoot.js",
          "options": {
            "overwrite": true
          }
        }
      ]
    },
    {
      "name": "Copy Ionic Dependencies",
      "src": "",
      "actions": [
        {
          "type": "copy",
          "src": "./node_modules/@ionic/core",
          "target": "./assets/ionic-core",
          "options": {
            "overwrite": true
          }
        },
        {
          "type": "copy",
          "src": "./node_modules/@ionic/pwa-elements",
          "target": "./assets/ionic-core/pwa-elements",
          "options": {
            "overwrite": true
          }
        },
        {
          "type": "copy",
          "src": "./node_modules/@ionic/pwa-elements",
          "target": "./assets/ionic-core/pwa-elements",
          "options": {
            "overwrite": true
          }
        }
      ]
    }
  ],
  "build": [
    {
      "name": "Copy pdm-toolkit-bundle",
      "src": "",
      "actions": [
        {
          "type": "copy",
          "src": "../pdm-dsu-toolkit/build/bundles/toolkit.js",
          "target": "./bundles/toolkit.js",
          "options": {
            "overwrite": true
          }
        }
      ]
    },
    {
      "name": "Copy opendsuDT-bundle",
      "src": "",
      "actions": [
        {
          "type": "copy",
          "src": "../pdm-dsu-toolkit/build/bundles/opendsuDT.js",
          "target": "./bundles/opendsuDT.js",
          "options": {
            "overwrite": true
          }
        }
      ]
    },
    {
      "name": "generate-service-worker",
      "src": "",
      "actions": [
        {
          "type": "execute",
          "cmd": "workbox generateSW"
        }
      ]
    }
  ],
  "docs": [
    {
      "name": "Documentation",
      "src": ".",
      "actions": [
        {
          "type": "execute",
          "cmd": "node ./node_modules/markdown-include/bin/cli.js ./mdCompile.json"
        },
        {
          "type": "execute",
          "cmd": "jsdoc -c jsdocs.json -t \"$(npm root -g)/better-docs\""
        }
      ]
    }
  ]
}
