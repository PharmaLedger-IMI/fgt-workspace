{
    "plugins": [
        "plugins/markdown",
        "plugins/summarize"
    ],
    "package": "package.json",
    "recurseDepth": 10,
    "source": {
        "include": [
            "./src"
        ],
        "exclude": [
            "./src/bundles",
            "./src/webcardinal",
            "./src/assets/ionic-core",
            "/src/asset/pwa",
            "./src/swBoot.js",
            "./src/swPwa.js"
        ],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "templates": {
        "ink-docstrap": {
            "systemName"            : "Pharmaledger's Finished Goods Traceability",
            "footer"                : "PDM&FC",
            "copyright"             :  "MIT Licence",
            "includeDate"           : "true",
            "navType"               : "inline",
            "theme"                 : "yeti",
            "linenums"              : "true",
            "collapseSymbols"       : "false",
            "inverseNav"            : "true",
            "outputSourceFiles"     : "true" ,
            "outputSourcePath"      : "false",
            "dateFormat"            : "dddd, MMMM Do YYYY, h:mm:ss a",
            "syntaxTheme"           : "default",
            "sort"                  : "true",
            "search"                : "true"
        },
        "docdash": {
            "static": true,
            "sort": true,
            "sectionOrder": [
                "Namespaces",
                "Classes",
                "Modules",
                "Externals",
                "Events",
                "Mixins",
                "Tutorials",
                "Interfaces"
            ],
            "search": true,
            "collapse": true,
            "wrap": false,
            "typedefs": true,
            "navLevel": -1,
            "private": true,
            "removeQuotes": "none",
            "scripts": [],
            "menu": {
                "Project Website": {
                    "href":"https://fgt.pharmaledger.pdmfc.com",
                    "target":"_blank",
                    "class":"menu-item",
                    "id":"website_link"
                }
            },
            "nameInOutputPath": true,
            "versionInOutputPath": true
        },
        "better-docs": {
            "name": "PDM&FC's OpenDSU Trust Loader Documentation",
            "title": "PDM&FC's OpenDSU Trust Loader Documentation",
            "hideGenerator": true,
            "navLinks": [
                {
                    "label": "Github",
                    "href": "https://github.com/PharmaLedger-IMI/epi-workspace/pdm-trust-loader.git"
                },
                {
                    "label": "Example Application - Finished Goods Traceability",
                    "href": "https://fgt.pharmaledger.pdmfc.com"
                }
            ]
        },
        "cleverLinks": false,
        "monospaceLinks": false,
        "search": true
    },
    "opts": {
        "encoding": "utf-8",
        "template": "./node_modules/better-docs",
        "destination": "./docs/",
        "readme": "./README.md",
        "recurse": true,
        "verbose": true
    }
}