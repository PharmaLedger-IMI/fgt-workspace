{
  "port": 8080,
  "storage": "./apihub-root",
  "logging": {
    "enabled": true
  },
  "identity": {
    "roles": {
      "mah": {
        "endpoints": ["gtin", "batch", "orderlines", "shipmentlines", "orderingtradingpartner", "sendingtradingpartner"]
      },
      "sender": {
        "endpoints": ["shipment", "shipmentline"]
      },
      "receiver": {
        "endpoints": ["order", "orderline"]
      },
      "dispenser": {
        "endpoints": ["dispense"]
      },
      "administerer": {
        "endpoints": ["administer"]
      }
    },
    "actors": [
      { "name": "mah",
        "roles": ["mah"]
      },
      { "name": "wholesaler",
        "roles": ["sender", "receiver"]
      },
      { "name": "pharmacy",
        "roles": ["receiver", "administerer", "dispenser"]
      }
    ]
  },
  "preventRateLimit": true,
  "enableRequestLogger": true,
  "activeEndpoints": [
    "fgt-identity",
    "virtualMQ",
    "messaging",
    "notifications",
    "filesManager",
    "bdns",
    "bricksLedger",
    "bricksFabric",
    "bricking",
    "anchoring",
    "dsu-wizard",
    "fgt-dsu-wizard",
    "gtin-dsu-wizard",
    "staticServer"
  ],
  "endpointsConfig": {
    "fgt-identity": {
      "module": "./../../fgt-identity",
      "function": "Init"
    },
    "gtin-dsu-wizard": {
      "module": "./../../gtin-dsu-wizard"
    },
    "fgt-dsu-wizard": {
      "module": "./../../fgt-dsu-wizard",
      "function": "Init"
    },
    "bricking": {
      "domains": {
        "epi": {
          "path": "/external-volume/domains/epi/brick-storage"
        },
        "traceability": {
          "path": "/external-volume/domains/traceability/brick-storage"
        },
        "default": {
          "path": "/internal-volume/domains/default/brick-storage"
        },
        "predefined": {
          "path": "/internal-volume/domains/predefined/brick-storage"
        },
        "vault": {
          "path": "/external-volume/domains/vault/brick-storage"
        }
      }
    },
    "anchoring": {
      "domainStrategies": {
        "epi": {
          "type": "FS",
          "option": {
            "path": "/external-volume/domains/epi/anchors",
            "enableBricksLedger": false
          },
          "commands": {
            "addAnchor": "anchor"
          }
        },
        "traceability": {
          "type": "FS",
          "option": {
            "path": "/external-volume/domains/traceability/anchors",
            "enableBricksLedger": false
          },
          "commands": {
            "addAnchor": "anchor"
          }
        },
        "default": {
          "type": "FS",
          "option": {
            "path": "/internal-volume/domains/default/anchors",
            "enableBricksLedger": false
          },
          "commands": {
            "addAnchor": "anchor"
          }
        },
        "predefined": {
          "type": "FS",
          "option": {
            "path": "/internal-volume/domains/predefined/anchors"
          }
        },
        "vault": {
          "type": "FS",
          "option": {
            "path": "/external-volume/domains/vault/anchors"
          }
        }
      }
    }
  },
  "enableAuthorisation": false,
  "enableLocalhostAuthorization": false,
  "skipAuthorisation": [
    "/assets",
    "/leaflet-wallet",
    "/dsu-fabric-wallet",
    "/directory-summary",
    "/resources",
    "/bdns",
    "/anchor/epi",
    "/anchor/default",
    "/anchor/vault",
    "/bricking",
    "/bricksFabric",
    "/bricksledger",
    "/create-channel",
    "/forward-zeromq",
    "/send-message",
    "/receive-message",
    "/files",
    "/notifications",
    "/mq"
  ]
}
