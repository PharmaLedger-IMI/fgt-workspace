{
  "anchoring": "traceability",
  "sub-title": "Please enter your credentials",
  "title": "As a Pharmacy",
  "form": {
    "prefix": "input-",
    "buttons": {
      "register": {
        "label": "Register",
        "icon": "person-add"
      },
      "login": {
        "label": "Login",
        "icon": "log-in"
      }
    },
    "fields": [
      {
        "name": "name",
        "element": "ion-input",
        "label": "Name:",
        "public": true,
        "props": {
          "type": "text",
          "placeholder": "Please enter Registered Name here...",
          "value": "PDM the Pharmacy",
          "required": true,
          "inputmode": "text"
        },
        "validation": {
          "required": {
            "error": "The Name is mandatory!"
          }
        }
      },
      {
        "name": "id",
        "element": "ion-input",
        "label": "Registered Pharmacy Id:",
        "public": true,
        "props": {
          "type": "text",
          "placeholder": "Please enter your Registered Id here...",
          "required": true
        },
        "validation": {
          "required": {
            "error": "The ID is mandatory!"
          }
        }
      },
      {
        "name": "email",
        "element": "ion-input",
        "label": "Registered Email:",
        "public": true,
        "props": {
          "type": "email",
          "placeholder": "Please enter your email here...",
          "value": "pharmacy@pdmfc.com",
          "required": true,
          "inputmode": "email"
        },
        "validation": {
          "required": {
            "error": "The Email is mandatory!"
          },
          "email": {
            "args": [],
            "error": "That is not a valid Email..."
          }
        }
      },
      {
        "name": "tin",
        "element": "ion-input",
        "label": "Registered TIN (Tax Identification Number):",
        "public": true,
        "props": {
          "type": "number",
          "subtype": "tin",
          "placeholder": "Enter your TIN (Tax Identification Number)...",
          "value": "5000000000",
          "min": "1",
          "max": "9999999999",
          "required": true,
          "inputmode": "numeric"
        },
        "validation": {
          "required": {
            "error": "Your Tad identification Number is mandatory"
          },
          "tin": {
            "args": [],
            "error": "That is not a valid TIN"
          }
        }
      },
      {
        "name": "address",
        "element": "ion-input",
        "label": "Address:",
        "public": true,
        "props": {
          "placeholder": "Please enter your address here...",
          "maxlength": "150",
          "minlength": "10",
          "cols": 20,
          "rows": 1,
          "value": "Avenida da Liberdade, Lisboa, Portugal",
          "required": true,
          "inputmode": "text"
        },
        "validation": {
          "required": {
            "error": "The Address is mandatory!"
          },
          "maxlength": {
            "error": "Too long"
          },
          "minlength": {
            "error": "Too short"
          }
        }
      },
      {
        "name": "password",
        "element": "ion-input",
        "label": "Password:",
        "public": false,
        "props": {
          "type": "password",
          "placeholder": "Please type in your password",
          "value": "This1sSuchAS3curePassw0rd",
          "minlength": 8,
          "required": true,
          "inputmode": "text"
        },
        "validation": {
          "required": {
            "error": "The Password is mandatory!"
          },
          "minlength": {
            "error": "The password needs to be at least 8 characters long!"
          },
          "equality": {
            "args": ["password-repeat"],
            "error": "The passwords don't match!"
          }
        }
      },
      {
        "name": "password-repeat",
        "element": "ion-input",
        "label": "Repeat your Password:",
        "public": false,
        "props": {
          "type": "password",
          "placeholder": "Please type in the same password please",
          "value": "This1sSuchAS3curePassw0rd",
          "minlength": 8,
          "required": true,
          "inputmode": "text"
        },
        "validation": {
          "required": {
            "error": "The confirmation of the password is mandatory!"
          },
          "minlength": {
            "error": "The password needs the be at least 8 characters long!"
          },
          "equality": {
            "args": ["password"],
            "error": "The passwords don't match!"
          }
        }
      }
    ]
  },
  "loading": {
    "register": "Creating new Wallet",
    "login": "Accessing Wallet..."
  },
  "errors": {
    "register": "Unable to register. Are you sure this account doesn't exist?",
    "login": "Could not Login. Maybe try registering?"
  },
  "success": {
    "register": "Registration Successful. Please Login",
    "login": "Login Successful. Please wait While we load your Application",
    "loading": "Loading Finished Goods Traceability Pharmacy application..."
  }
}
