{
  "anchoring": "default",
  "sub-title": "Please enter your credentials",
  "title": "As a Pharmacy",
  "form": {
    "prefix": "input-",
    "buttons": {
      "clear": {
        "label": "Clear"
      },
      "register": {
        "label": "Register",
        "icon": "person-add"
