{
  "anchoring": "traceability",
  "sub-title": "Please enter your credentials",
  "title": "As a Pharmacy",
  "form": {
    "prefix": "input-",
    "buttons": {
      "clear": {
        "label": "Clear"
      },
      "register": {
        "label": "Register",
        "icon": "person-add"
      },
      "login": {
        "label": "Login",
        "icon": "log-in"
      }
    },
    "fields": [
      {
        "name": "name",
        "element": "ion-input",
        "label": "Name:",
        "public": true,
        "props": {
          "type": "text",
          "placeholder": "Please enter your name here...",
          "value": "PDM the Pharmacy",
          "required": true,
          "inputmode": "text"
        }
      },
      {
        "name": "id",
        "element": "ion-input",
        "label": "Registered Pharmacy Id:",
        "public": true,
        "props": {
          "type": "text",
          "placeholder": "Please enter your Id here...",
          "required": true
        }
      },
      {
        "name": "email",
        "element": "ion-input",
        "label": "Registered Email:",
        "public": true,
        "props": {
          "type": "email",
          "placeholder": "Please enter your email here...",
          "value": "pharmacy@pdmfc.com",
          "required": true,
          "inputmode": "email"
        }
      },
      {
        "name": "tin",
        "element": "ion-input",
        "label": "Registered TIN (Tax Identification Number):",
        "public": true,
        "props": {
          "type": "number",
          "subtype": "tin",
          "placeholder": "Enter your TIN (Tax Identification Number)...",
          "value": "5000000000",
          "min": "1",
          "max": "9999999999",
          "required": true,
          "inputmode": "numeric"
        }
      },
      {
        "name": "address",
        "element": "ion-textarea",
        "label": "Name:",
        "public": true,
        "props": {
          "placeholder": "Please enter your address here...",
          "maxlength": "150",
          "minlength": "10",
          "cols": 20,
          "rows": 2,
          "value": "Avenida da Liberdade, Lisboa, Portugal",
          "required": true,
          "inputmode": "text"
        }
      },
      {
        "name": "password",
        "element": "ion-input",
        "label": "Password:",
        "public": false,
        "props": {
          "type": "password",
          "placeholder": "Please type in your password",
          "value": "This1sSuchAS3curePassw0rd",
          "minlength": 8,
          "required": true,
          "inputmode": "text"
        },
        "validation": {
          "required": {
            "error": "Do you really think you can register without a password?!"
          },
          "equality": {
            "field": "pass",
            "error": "The passwords don't match!"
          }
        }
      },
      {
        "name": "password-repeat",
        "element": "ion-input",
        "label": "Repeat your Password:",
        "public": false,
        "props": {
          "type": "password",
          "placeholder": "Please type in the same password please",
          "value": "This1sSuchAS3curePassw0rd",
          "minlength": 8,
          "required": true,
          "inputmode": "text"
        },
        "validation": {
          "required": {
            "error": "It's for your security!\nPlease confirm you password here!"
          },
          "equality": {
            "field": "pass",
            "error": "The passwords don't match!"
          }
        }
      }
    ]
  },
  "id-backup": {
    "label": "Id:",
    "type": "text",
    "placeholder": "Please enter your id here...",
    "value": "#id11",
    "public": true,
    "required": true
  },
  "loading": {
    "register": "Creating new Wallet",
    "login": "Accessing Wallet..."
  },
  "errors": {
    "register": "Unable to register. Are you sure this account doesn't exist?",
    "login": "Could not Login. Maybe try registering?"
  },
  "success": {
    "register": "Registration Successful. Please Login",
    "login": "Login Successful. Please wait"
  }
}
