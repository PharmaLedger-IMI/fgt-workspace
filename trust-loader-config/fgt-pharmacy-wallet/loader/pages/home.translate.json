        "props": {
          "type": "email",
          "placeholder": "Please enter your email here...",
          "value": "some@email.com",
          "required": true
        }
      },
      {
        "name": "tin",
        "element": "ion-input",
        "label": "Tin:",
        "public": true,
        "props": {
          "type": "number",
          "placeholder": "Please enter your tin here...",
          "value": "5000000000",
          "required": true
        }
      },
      {
        "name": "address",
        "element": "ion-textarea",
        "label": "Name:",
        "public": true,
        "props": {
          "placeholder": "Please enter your address here...",
          "maxlength": "150",
          "minlength": "10",
          "cols": 2,
          "rows": 20,
          "value": "Avenida da Liberdade, Lisboa, Portugal",
          "required": true
        }
      },
      {
        "name": "address",
        "element": "ion-input",
        "label": "Name:",
        "props": {
          "type": "password",
          "placeholder": "Please enter your name here...",
          "value": "PDM",
          "public": false,
          "required": true
        }
      },
      {
        "name": "address",
        "element": "ion-input",
        "label": "Name:",
        "props": {
          "type": "text",
          "placeholder": "Please enter your name here...",
          "value": "PDM",
          "public": false,
          "required": true
        },
        "validation": {
          "required": {
            "error": "This field is mandatory"
          },
          "equality": {
            "field": "pass",
            "error": "The passwords don't match!"
          }
        }
      }
    ]
  },
  "id-backup": {
    "label": "Id:",
    "type": "text",
    "placeholder": "Please enter your id here...",
    "value": "#id11",
    "public": true,
    "required": true
